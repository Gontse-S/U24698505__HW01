@model U24698505__HW01.Models.RescueBus
@{
    ViewBag.Title = "Booking Confirmed";
}



<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/BookStyle.css" />

<div class="container py-5 text-center">
    <img src="~/Content/Images/check.png" alt="Checkmark" width="60" />
    <h2 class="text-success mt-3 mb-4">Booking Confirmed</h2>


    <div class="booking-card mb-4">
        <h5 class="text-success">Booking Details</h5>
        <p><strong>Booking ID:</strong> <span id="bookingId"></span></p>
        <p><strong>Date Booked:</strong> <span id="bookingDate"></span></p>
        <p><strong>Pick-Up Time:</strong> <span id="pickupTime"></span></p>
        <p><strong>Pick-Up Address:</strong> <span id="pickupAddress"></span></p>
    </div>


    <div class="booking-card mb-4">
        <h5 class="text-success">Driver Details</h5>
        <img id="driverImage" src="" class="rounded-circle mb-2" width="80" height="80" />
        <p><strong>Driver Name:</strong> <span id="driverName"></span></p>
        <p><strong>Phone Number:</strong> <span id="phoneNumber"></span></p>
    </div>


    <div class="booking-card">
        <h5 class="text-success">Ambulance Details</h5>
        <img id="vehicleImage" src="" class="mb-2" width="80" />
        <p><strong>Ambulance Type:</strong> <span id="vehicleType"></span></p>
        <p><strong>Registration Number:</strong> <span id="regNumber"></span></p>
    </div>
</div>

<script>
    const bookings = JSON.parse(localStorage.getItem("bookings") || "[]");
    const latest = bookings[bookings.length - 1];

    document.getElementById("bookingId").textContent = latest.BookingID;
    document.getElementById("bookingDate").textContent = latest.BookingDate;
    document.getElementById("pickupTime").textContent = latest.PickUpTime;
    document.getElementById("pickupAddress").textContent = latest.PickUpAddress;

    document.getElementById("driverName").textContent = latest.Driver;
    document.getElementById("phoneNumber").textContent = latest.DriverPhone;
    document.getElementById("driverImage").src = "/Content/Images/Driver/" + latest.DriverImage;

    document.getElementById("vehicleType").textContent = latest.Vehicle;
    document.getElementById("regNumber").textContent = latest.VehicleRegNumber;
    document.getElementById("vehicleImage").src = "/Content/Images/Vehicle/" + latest.VehicleImage;
</script>